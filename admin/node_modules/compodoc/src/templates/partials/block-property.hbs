<section>
    <h3 id="inputs">Properties</h3>
    {{#each properties}}
        <table class="table table-sm table-bordered">
            <tbody>
                <tr>
                    <td class="col-md-4">
                        <b>{{name}}</b>
                    </td>
                </tr>
                <tr>
                    <td class="col-md-4">
                        <code>{{name}}: {{> link-type type=type }}</bcode>
                    </td>
                </tr>
                {{#if defaultValue}}
                    <tr>
                        <td class="col-md-4">
                            <i>Default value: </i><code>{{defaultValue}}</code>
                        </td>
                    </tr>
                {{/if}}
                {{#if description}}
                <tr>
                    <td class="col-md-4">
                        <div class="io-description">{{{description}}}</div>
                    </td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    {{/each}}
</section>
